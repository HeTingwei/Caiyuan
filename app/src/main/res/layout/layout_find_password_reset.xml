<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xingyi.caiyuan.view.control.LayoutTitleWithButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.xingyi.caiyuan.view.control.LayoutTitleWithButton>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码"/>
    <EditText
        android:id="@+id/edit_password1"
        android:paddingLeft="10dp"
        android:hint="请输入20个以内的字符"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_edit"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"/>
    <EditText
        android:id="@+id/edit_password2"
        android:paddingLeft="10dp"
        android:hint="请输入20个以内的字符"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_edit"/>

    <Button
        android:onClick="commitClick"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="提交"
        android:background="@drawable/bt_selector"/>

    <ProgressBar
        android:id="@+id/new_password_progressbar"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>



