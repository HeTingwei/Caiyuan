<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageButton
            android:id="@+id/avatar_img"
            android:layout_marginLeft="4dp"
            android:src="@drawable/img_face"
            android:scaleType="fitCenter"
            android:background="@color/noColor"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/from"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatar_img"
            android:text="来自专家:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/expert_tv"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/from"
            android:text="张三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_tv"
            android:text="2分钟前"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/expert_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/look_count_tv"
            android:text="256"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/main_eye_count"
            android:layout_marginRight="8dp"
            android:layout_width="25dp"
            android:layout_height="20dp"

            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/look_count_tv" />
    </RelativeLayout>

    <TextView
        android:id="@+id/article_title_tv"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:text="文章标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/article_content_tv"
        android:layout_marginLeft="8dp"
        android:maxLines="3"
        android:text="1\n2\n3315334            DVD在vzdsv但是vsvsz          故意的圣诞节看见了叫酷乐354"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <ImageButton
            android:id="@+id/article_up_bt"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/noColor"
            android:scaleType="fitCenter"
            android:src="@drawable/up_gray" />

        <TextView
            android:id="@+id/up_count_tv"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:text="22" />

        <ImageButton
            android:id="@+id/article_down_bt"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/noColor"
            android:scaleType="fitCenter"
            android:src="@drawable/down_gray" />

        <TextView
            android:id="@+id/down_count_tv"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:text="33" />
    </LinearLayout>


</LinearLayout>