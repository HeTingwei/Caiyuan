<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:background="@color/green">

    <TableRow>

        <ImageButton
            android:id="@+id/choice_home"
            android:layout_weight="1"
            android:width="0dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:background="@color/noColor"
            android:src="@drawable/bt_c_main"/>

        <ImageButton
            android:id="@+id/choice_find"
            android:layout_weight="1"
            android:width="0dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:background="@color/noColor"
            android:src="@drawable/bt_c_find"/>


        <ImageButton
            android:id="@+id/choice_chat"
            android:layout_weight="1"
            android:width="0dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:background="@color/noColor"
            android:src="@drawable/bt_c_chat"/>

        <ImageButton
            android:id="@+id/choice_moments"
            android:layout_weight="1"
            android:width="0dp"
            android:scaleType="centerInside"
            android:layout_height="25dp"
            android:background="@color/noColor"
            android:src="@drawable/bt_c_moments"/>

        <ImageButton
            android:id="@+id/choice_more"
            android:layout_weight="1"
            android:width="0dp"
            android:scaleType="centerInside"
            android:layout_height="25dp"
            android:background="@color/noColor"
            android:src="@drawable/bt_c_more"/>
    </TableRow>

</TableLayout>