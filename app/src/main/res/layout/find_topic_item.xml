<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/avatar_bt"

        android:background="@color/noColor"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/avatar"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_goneMarginTop="8dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="瓜果"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/avatar_bt"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/introduce_tv"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:text="关注西瓜种植,kjhlkjhlkjhlkjhlkjhlkjhljhlkjhlkjhlkj..."
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@+id/avatar_bt"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintRight_toLeftOf="@+id/follow_bt"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/follow_bt"
        android:background="@drawable/bt_selector"
        android:textColor="@color/white"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="关注"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.722" />
</android.support.constraint.ConstraintLayout>