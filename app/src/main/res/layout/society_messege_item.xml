<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/message_avatar_img"
        android:layout_margin="8dp"
        android:src="@drawable/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_name_tv"
            android:text="发消息者的名称"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_content_tv"
            android:text="发送的消息者"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_tv"
            android:text="2017-07-23"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/message_count_tv"
            android:background="@drawable/more_notice_red"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>


</LinearLayout>